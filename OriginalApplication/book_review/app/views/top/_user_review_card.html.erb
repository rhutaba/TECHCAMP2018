<div class="review_card">
  <div>
    <h3 class="book_title">Title: <%= user_review.book.title %></h3>
  </div>
  <div class="user_review">
    <div class="book_visual">
      <%= image_tag("01_readablecode.jpg", size: "120x160") %>
    </div>
    <div class="user_review_text">
      <%= user_review.review_text %>
    </div>
  </div>
  <div class="review_link">
    <ul><li><%= link_to('レビューの全文を見る', book_user_review_path(book_id: user_review.book.id, id: user_review.id)) %></li></ul>
  </div>
</div>
