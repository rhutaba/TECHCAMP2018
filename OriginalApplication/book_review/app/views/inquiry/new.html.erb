<div class="inquiry_container">
  <h1>お問合わせフォーム</h1>
  <%= form_for @inquiry, :url => { :action => 'create' } do |f| %>
    <div style="margin: 8px 0">
      <%= f.label :email, style: { 'margin-right' => 8 } %>
      <%= f.text_field :email, placeholder: 'email', value: '' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_area :inquiry_text, placeholder: 'お問合わせの内容', style: 'width: 100%; height: 300px;' %>
    </div>
    <div class="row">
      <div class="col10 push1">
        <%= button_tag type: "submit", class: "btn btn--block" do %>
          投稿する<i class="icon-arrow-right"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
